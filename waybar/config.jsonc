        "format-alt": "<span foreground='#99ffdd'>ÔÄô  {bandwidthDownBytes}</span> <span foreground='#ffcc66'>ÔÇì  {bandwidthUpBytes}</span>",
	"interval": 2
	// "on-click": "exec nm-connection-editor"
    },
    "pulseaudio": {
        "scroll-step": 2, // %, can be a float
        "format": "{icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî}",
        "format-muted": "Ôö© ",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ• ",
            "hands-free": "Ôñê ",
            "headset": "Ôñê ",
            "phone": "ÔÇï ",
            "portable": "ÔÇï ",
            "car": "ÔÜπ ",
            "default": ["ÔÄ¶", "ÔÄß ", "ÔÄ® "]
        },
        "on-click": "pavucontrol",
	"tooltip-format": "{icon} {volume}% - {desc}"
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        // "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        "exec": "python $HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Filter player based on name
    },
    "custom/weather": {
	    // "exec": "sh ${HOME}/.config/waybar/get_weather.sh Dhulikhel,Nepal",
        "exec": "python ~/.config/waybar/scripts/weather-wttr.py",
        "return-type": "json",
        "format": "{}",
        "tooltip": true,
        "interval": 300,
        "on-click": "xdg-open https://weather.com/en-IN/weather/today/l/$(location_id)"
    },
    "custom/spotify": {
        "format": "ÔÜº  {}",
        "max-length": 34,
        "interval": 1,
        "exec": "sh $HOME/.config/waybar/mediaplayer.sh --player spotify 2> /dev/null",
        "exec-if": "pgrep spotify",
        "on-click": "playerctl -p spotify play-pause",
        "on-scroll-up" : "playerctl -p spotify next",
            "on-scroll-down" : "playerctl -p spotify previous",
        "smooth-scrolling-threshold": 10
    },
     "custom/notifications": {
        "format": "{icon} {}",
        "rotate": 0,
        "format-icons": {
            "email-notification": "ÔêØ <span foreground='white'><sup>ÔëÑ</sup></span>",
            "chat-notification": "Û±ãä <span foreground='white'><sup>ÔëÑ</sup></span>",
            "warning-notification": "Û±®™ <span foreground='yellow'><sup>ÔëÑ</sup></span>",
            "error-notification": "Û±®™ <span foreground='red'><sup>ÔëÑ</sup></span>",
            "network-notification": "Û±Çá <span foreground='white'><sup>ÔëÑ</sup></span>",
            "battery-notification": "Û∞Å∫ <span foreground='white'><sup>ÔëÑ</sup></span>",
            "update-notification": "Û∞ö∞ <span foreground='white'><sup>ÔëÑ</sup></span>",
            "music-notification": "Û∞ùö <span foreground='white'><sup>ÔëÑ</sup></span>",
            "volume-notification": "Û∞ïø <span foreground='white'><sup>ÔëÑ</sup></span>",
            "notification": "ÔÇ¢ <span foreground='white'><sup>ÔëÑ</sup></span>",
            "none": "ÔÇ¢ "
        },
        "return-type": "json",
        "exec-if": "which dunstctl",
        "exec": "python $HOME/.config/waybar/notifications.py",
        "on-click": "sleep 0.1 && dunstctl history-pop",
        "on-click-middle": "dunstctl history-clear",
        "on-click-right": "dunstctl close-all",
        "interval": 1,
        "tooltip": true,
        "escape": true
    },
    "custom/power": {
        "format": "ÔÄë ",
        "rotate": 0,
        "on-click": "wlogout",
        "interval" : 86400,
        "tooltip": false
    },
    "custom/distro-icon": {
        "format": "Û∞£á",
	"icon-size": 30,
        "interval": "once",
        "tooltip": false
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 24,
        "icon-theme": "Numix-Circle",
        "tooltip": false,
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
            "Alacritty"
        ],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },
    "group/hardware": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "children-class": "not-memory",
      "transition-left-to-right": false
    },
    "modules": ["memory", "cpu", "temperature"]
    }
}
