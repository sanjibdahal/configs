     // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
	"custom/distro-icon",
        // "hyprland/mode",
        // "hyprland/scratchpad",
	// "cpu",
	// "memory",
	// "temperature",
	//"custom/media",
	"group/hardware",
	"custom/weather",
	// "wlr/taskbar",
	"custom/spotify"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
	"custom/notifications",
        "mpd",
        "idle_inhibitor",
        "network",
	"pulseaudio",
	"bluetooth",
        "power-profiles-daemon",
        // "backlight",
        "keyboard-state",
        "battery",
        "battery#bat2",
        "clock",
	"custom/power"
        // "tray"
    ],
    // Modules configuration
    "hyprland/workspaces": {
         "disable-scroll": true,
         "all-outputs": true,
         "warp-on-scroll": false,
         "format": "{name}", 
	 "persistent-workspaces": {
	     "*": 5
	 }
         /* "format-icons": {
             "1": "ÔÑ† ",
             "2": "Ôâ® ",
             "3": "ÔÑ° ",
             "4": "ÔÜº ",
             "5": "ÔÅµ ",
             "urgent": "ÔÅ™ ",
             "focused": "ÔÜí ",
             "default": "ÔÑë "
         }, */
     },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },

    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "Ôãí"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
